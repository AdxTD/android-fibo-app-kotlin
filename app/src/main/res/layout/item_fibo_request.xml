<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:paddingStart="@dimen/item_fibo_request_horizontal_padding"
        android:paddingTop="@dimen/item_fibo_request_vertical_padding"
        android:paddingEnd="@dimen/item_fibo_request_horizontal_padding"
        android:paddingBottom="@dimen/item_fibo_request_vertical_padding"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_fibo_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="start"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/item_fibo_request_vertical_padding"
            />

        <TextView
            android:id="@+id/tv_request_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textSize="16sp"
            android:layout_marginBottom="@dimen/item_fibo_request_vertical_padding" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>